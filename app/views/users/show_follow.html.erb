<div class="row">
	<%= render 'user_info' %>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
      <h3><%= params[:action] %> (<%= @users.count %>)</h3>
      <ol class="users">
				<% @users.each do |user| %>
					<li id="user-<%= user.id %>">
					  <%= link_to gravatar_for(user, size: 50), user %>
					  <span class="user"><%= link_to user.name, user %></span>
					</li>
				<% end %>
      </ol>
  </div>
</div>